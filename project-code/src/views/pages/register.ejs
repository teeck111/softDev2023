<%- include ('../partials/header') %>
  <%- include ('../partials/menu') %>
<main>
  <div class="container home-color">

    <div style="text-align: center; align-items: center; justify-content: center; display: flex; ">
      <div class="login_box">
        <h1 class="title">Register</h1>
        <div style="text-align: left;">
          <form action="/register" method="POST">
              <div class="form-group">
                  <label home-color for="email">Email:</label>
                  <input type="username" class="form-control" name="email">
              </div>
              <div class="form-group">
                  <label for="password">Password:</label>
                  <input type="text" class="form-control" name="password">
              </div>
              <br>
              <p style="display: inline;">Already have an account?</p>
              <a href="/login" class="hover" style="display: inline; ">Login</a>
              <br>
              <div style="margin-top: 20px;">
                <button type="submit" class="btn btn-primary">Register</button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include ('../partials/footer') %>